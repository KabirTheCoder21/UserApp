<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ui.gallery.GalleryFragment">
    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:weightSum="3">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/grey2"
                android:layout_marginVertical="8dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/convo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convocation"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/latobold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:id="@+id/convo_rv"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/grey2"
                android:layout_marginVertical="8dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ind_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Independence Day"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/latobold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:id="@+id/ind_rv"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/grey2"
                android:layout_marginVertical="8dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/other_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Events"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="@font/latobold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:id="@+id/other_rv"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>