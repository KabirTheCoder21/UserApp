<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D0E7D2"
    tools:context="com.example.ui.home.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="6dp"
               android:layout_margin="4dp"
               app:cardElevation="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.smarteist.autoimageslider.SliderView
                   android:id="@+id/imageSlider"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   app:sliderAnimationDuration="600"
                   app:sliderAutoCycleDirection="back_and_forth"
                   app:sliderAutoCycleEnabled="true"
                   app:sliderIndicatorAnimationDuration="600"
                   app:sliderIndicatorGravity="center_horizontal|bottom"
                   app:sliderIndicatorMargin="15dp"
                   app:sliderIndicatorOrientation="horizontal"
                   app:sliderIndicatorPadding="3dp"
                   app:sliderIndicatorRadius="2dp"
                   app:sliderIndicatorSelectedColor="#282727"
                   app:sliderIndicatorUnselectedColor="#FFF"
                   app:sliderScrollTimeInSec="1"
                   app:sliderStartAutoCycle="true" />
           </androidx.cardview.widget.CardView>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:padding="4dp">
                  <com.google.android.material.card.MaterialCardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_margin="3dp">
                      <LinearLayout
                          android:id="@+id/univ_at_glance"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="#B0D9B1">

                          <de.hdodenhof.circleimageview.CircleImageView
                              android:layout_width="match_parent"
                              android:layout_height="80dp"
                              android:layout_marginTop="2dp"
                              android:src="@drawable/university" />
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="University At Glance"
                              android:fontFamily="@font/latoregular"
                              android:gravity="center"
                              android:textSize="14sp"
                              android:textColor="@color/textcolor"
                              />
                      </LinearLayout>
                  </com.google.android.material.card.MaterialCardView>
                  <com.google.android.material.card.MaterialCardView
                      android:id="@+id/our_campuses"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_margin="3dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:background="#B0D9B1"
                          android:id="@+id/campuses">

                          <de.hdodenhof.circleimageview.CircleImageView
                              android:layout_width="match_parent"
                              android:layout_height="80dp"
                              android:layout_marginTop="2dp"
                              android:src="@drawable/campuses" />

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:fontFamily="@font/latoregular"
                              android:gravity="center"
                              android:text="Our Campuses"
                              android:textColor="@color/textcolor"
                              android:textSize="14sp" />
                      </LinearLayout>
                  </com.google.android.material.card.MaterialCardView>
                  <com.google.android.material.card.MaterialCardView
                      android:id="@+id/contect_directory"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_margin="3dp"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:background="#B0D9B1">
                          <de.hdodenhof.circleimageview.CircleImageView
                              android:layout_width="match_parent"
                              android:layout_height="80dp"
                              android:layout_marginTop="2dp"
                              android:src="@drawable/contact"/>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="Contact Directory"
                              android:fontFamily="@font/latoregular"
                              android:gravity="center"
                              android:textColor="@color/textcolor"
                              android:textSize="14sp"
                              />
                      </LinearLayout>
                  </com.google.android.material.card.MaterialCardView>

              </LinearLayout>
           <com.google.android.material.card.MaterialCardView
               android:layout_width="match_parent"
               android:layout_height="215dp"
               app:cardCornerRadius="8dp"
               app:cardElevation="8dp"
               android:layout_margin="7dp">
            <com.google.android.exoplayer2.ui.StyledPlayerView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/styledPV"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

           </com.google.android.material.card.MaterialCardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:padding="4dp">
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/admission_home"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/admission" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Admission"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textSize="14sp"
                           android:textColor="@color/textcolor"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/events_home"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/events" />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:text="Events"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp" />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/news_home"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/news"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="News"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:padding="4dp">
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/Academics"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/calendar" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Academic Calendar"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textSize="14sp"
                           android:textColor="@color/textcolor"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/exams"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/examination" />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:text="Examination"                           android:textColor="@color/textcolor"
                           android:textSize="14sp" />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/results"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/result"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Result"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:padding="4dp">
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/support"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/student_support" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Student Support"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textSize="14sp"
                           android:textColor="@color/textcolor"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/activity"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/student_activity" />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:text="Student Activities"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp" />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/material"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/online_education"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Online Study"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:padding="4dp">
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/udrc"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/udrc_login" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="UDRC Login"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textSize="14sp"
                           android:textColor="@color/textcolor"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/fees"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/fee_submission" />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:text="Fee Submission"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp" />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/scholarship"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="3dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="#B0D9B1">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:layout_marginTop="2dp"
                           android:src="@drawable/scholarship"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Scholarship"
                           android:fontFamily="@font/latoregular"
                           android:gravity="center"
                           android:textColor="@color/textcolor"
                           android:textSize="14sp"
                           />
                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>

           </LinearLayout>

          <!-- <GridView
               android:id="@+id/grid_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:numColumns="3"
               android:layout_margin="2dp"
               android:background="@color/circleColor"
               android:nestedScrollingEnabled="false"/>-->

           <androidx.cardview.widget.CardView
               app:cardCornerRadius="12dp"
               app:cardElevation="4dp"
               android:layout_margin="12dp"
               android:padding="4dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <com.smarteist.autoimageslider.SliderView
                   android:id="@+id/imageSlider2"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   app:sliderAnimationDuration="600"
                   app:sliderAutoCycleDirection="back_and_forth"
                   app:sliderAutoCycleEnabled="true"
                   app:sliderIndicatorAnimationDuration="600"
                   app:sliderIndicatorGravity="center_horizontal|bottom"
                   app:sliderIndicatorMargin="15dp"
                   app:sliderIndicatorOrientation="horizontal"
                   app:sliderIndicatorPadding="3dp"
                   app:sliderIndicatorRadius="2dp"
                   app:sliderIndicatorSelectedColor="#282727"
                   app:sliderIndicatorUnselectedColor="#FFF"
                   app:sliderScrollTimeInSec="1"
                   app:sliderStartAutoCycle="true" />
           </androidx.cardview.widget.CardView>
           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Connect With Us : "
               android:textSize="16sp"
               android:layout_marginStart="12dp"
               android:textColor="@color/textcolor"
               android:fontFamily="@font/latoregular"
               android:padding="5dp"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_marginStart="12dp"
               android:layout_marginEnd="6dp"
               android:layout_marginTop="3dp"
               android:background="@color/grey1"/>
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:cardCornerRadius="12dp"
                 app:cardElevation="4dp"
                 android:layout_margin="12dp"
                 android:padding="4dp">
                 <ImageView
                     android:id="@+id/image_map"
                     android:layout_width="match_parent"
                     android:layout_height="210dp"
                     android:src="@drawable/back_map"
                     android:scaleType="fitXY"/>
             </com.google.android.material.card.MaterialCardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:src="@drawable/lu_logo"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textSize="14sp"
                   android:fontFamily="@font/latobold"
                   android:text="© University of Lucknow \n226007, India"/>
           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/insta"
                android:layout_marginEnd="4dp"
                android:id="@+id/insta"/>
            <ImageView
                android:id="@+id/facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/facebook"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:id="@+id/youtube"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/youtube"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:id="@+id/twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/twitter"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
       </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>